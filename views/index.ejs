<% include partials/header %>
<div class="container">
  <h1 class="page-header"><%= title %></h1>
  <div class="row">
    <div class="col-lg-12">
      <!-- {{#if success_msg}} -->
      <% if(errors) { %>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>Warning!</h4>
            <p><%= error.msg %></p>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <div class="list-group">
        <% users.forEach(function(user) { %>
          <a class="list-group-item" href="#">
            <h4 class="list-group-item-heading">
              <%= user.first_name; %>&nbsp;<%= user.last_name; %>
              <button class="deleteUser btn btn-primary btn-xs" data-id="<%= user._id %>">Delete</button>
            </h4>
            <p class="list-group-item-text">
              <%= user.email; %>
            </p>
          </a>
        <% }); %>
      </div>
    </div>
    <div class="col-lg-7">
      <form class="well form-horizontal" method="POST" action="/users/add">
        <fieldset>
          <legend>Add Customer</legend>
          <div class="form-group">
            <label for="first_name" class="col-lg-4 control-label">First Name:</label>
            <div class="col-lg-6">
              <input type="text" class="form-control" placeholder="First" name="first_name">
            </div>
          </div>
          <div class="form-group">
            <label for="last_name" class="col-lg-4 control-label">Last Name:</label>
            <div class="col-lg-6">
              <input type="text" class="form-control" placeholder="Last" name="last_name">
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="col-lg-4 control-label">Email:</label>
            <div class="col-lg-6">
              <input type="email" class="form-control" placeholder="something@example.com" name="email">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
              <input type="reset" class="btn btn-default" value="Cancel">
              <input type="submit" class="btn btn-success" value="Submit">
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
<% include partials/footer %>
